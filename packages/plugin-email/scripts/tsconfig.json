{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "*.ts",
        "*.mts"
    ],
    "exclude": [
        "../src",
        "../dist",
        "../node_modules"
    ]
}